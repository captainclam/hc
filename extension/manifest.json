{
  "manifest_version": 2,
  "name": "Hip Charts",
  "description": "",
  "version": "1.0",
  "icons": {
    "128": "img/logo-large.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "lib/jquery.min.js",
      "lib/underscore-min.js",
      "bg.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["extension.css"],
      "js": [
        "lib/jquery.min.js",
        "content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "img/logo-small.png",
    "default_popup": "popup.html"
  }
}
