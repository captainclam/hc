* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
  
.flat {
  margin-bottom: 0 !important;
}

body {
  font-size: 14px;
  line-height: 1.5;
  color: #555;
  font-family: 'Open Sans', sans-serif;
}

button {
  display: block;
  width: 100%;
  border: 0;
  background: #f9f9f9;
  border: 1px solid #ddd;
  border-bottom-width: 2px;
  color: #111;
  font-weight: 500;
  text-align: center;
  height: 44px;
  line-height: 44px;
  font-size: 14px;
  cursor: pointer;
}

button:focus {
  outline: 0;
}

label {
  display: block;
  margin-bottom: 6px;
  font-weight: 400;
}

.input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #fff;
  border: 1px solid #ddd;
  font-size: 14px;
  margin-bottom: 12px;
}

.hipcharts {
  width: 320px;
  padding: 20px;
}
