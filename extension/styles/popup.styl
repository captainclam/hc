*
  margin: 0
  padding: 0
  box-sizing: border-box
  
.flat
  margin-bottom: 0 !important

h1
h2
h3
h4
h5
  margin-bottom: 12px

body
  font-size: 14px
  line-height: 1.5
  color: #555
  font-family: 'Open Sans', sans-serif

button
  display: block
  width: 100%
  border: 0
  background: #f9f9f9
  border: 1px solid #ddd
  border-bottom-width: 2px
  color: #111
  font-weight: 500
  text-align: center
  height: 44px
  line-height: 44px
  font-size: 14px
  cursor: pointer

button:focus
  outline: 0

label
  display: block
  margin-bottom: 6px
  font-weight: 400

.input
  width: 100%
  height: 44px
  padding: 0 12px
  background: #fff
  border: 1px solid #ddd
  font-size: 14px
  margin-bottom: 12px

.input:focus
  outline: 0

.hipcharts
  width: 320px

.hipcharts__title
  font-size: 14px
  text-transform: uppercase
  font-weight: 600

.hipcharts__body
  padding: 12px

.hipcharts__footer
  background-color: #F5F5F5
  border-top: 1px solid #ddd
  padding: 12px
