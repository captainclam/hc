*
  margin: 0
  padding: 0
  box-sizing: border-box
  
.flat
  margin-bottom: 0 !important

.hc-chart
  display: block
  padding: 6px 0
  border-top: 1px solid #ddd
  cursor: pointer
  font-weight: 400
  position: relative
  &:first-child
    border-top: 0
  &:hover
    color: #111

.hc-item
  display: block
  padding: 6px 0
  border-top: 1px solid #ddd
  cursor: pointer
  font-weight: 400
  position: relative
  &:first-child
    border-top: 0

.hc-remove
  position: absolute
  right: 0
  font-style: normal
  top: 6px
  width: 24px
  height: 24px
  text-align: center
  line-height: 24px
  display: block
  font-weight: bold
  color: #ddd
  &:hover
    color: #111

a
  color: #4A90E2
  &:focus
    outline: 0

h1
h2
h3
h4
h5
p
  margin-bottom: 12px

body
  font-size: 14px
  line-height: 1.5
  color: #555
  font-family: 'Open Sans', sans-serif

button
  display: block
  width: 100%
  border: 0
  background: #f9f9f9
  border: 1px solid #ddd
  border-bottom-width: 2px
  color: #111
  font-weight: 500
  text-align: center
  height: 44px
  line-height: 44px
  font-size: 14px
  cursor: pointer

button:focus
  outline: 0

label
  display: block
  margin-bottom: 6px
  font-weight: 400

.input
  width: 100%
  height: 44px
  padding: 0 12px
  background: #fff
  border: 1px solid #ddd
  font-size: 14px
  margin-bottom: 12px

.input:focus
  outline: 0

.hipcharts
  width: 320px

.hipcharts__title
  font-size: 14px
  text-transform: uppercase
  font-weight: 600
  a
    text-transform: none

.hipcharts__body
  padding: 12px
  :last-child
    margin-bottom: 0

.hipcharts__footer
  background-color: #F5F5F5
  border-top: 1px solid #ddd
  padding: 12px

.hipcharts__error
  font-size: 14px
  font-weight: 100
  color: #999

.hipcharts__back
  width: 50px
  cursor: pointer

.hc-module
  display: none

.hc-module--active
  display: block
