.hc-on
  padding-right: 50px !important

.hc-banner
  display: none
  position: fixed
  top: 0
  right: -270px
  width: 320px
  bottom: 0
  background: #474747
  text-align: center
  color: #222
  font-size: 20px
  -webkit-transition: all 0.25s ease
  z-index: 999999999999

.hc-banner--active
  -webkit-transform: translateX(-270px)

i.fa
  width: 50px
  height: 50px
  display: block
  color: #fff
  font-size: 32px
  line-height: 50px
  text-align: center
  font-style: normal
  cursor: pointer
  -webkit-transition: all 0.25s ease

.hc-banner--active i.fa
  -webkit-transform: rotate(45deg)