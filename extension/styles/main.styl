.hc-on
  -webkit-transition: all 0.25s ease
  padding-right: 50px !important

.hc-on #masthead-positioner
  right: 50px

.hc-banner
  display: none
  position: fixed
  top: 0
  right: -270px
  width: 320px
  bottom: 0
  background: #474747
  text-align: center
  color: #222
  font-size: 20px
  box-shadow: inset 1px 0 4px rgba(0,0,0,0.3)
  border-left: 1px solid rgba(255,255,255,0.05)
  z-index: 999999999999

.hc-banner--active
  -webkit-transform: translateX(-270px)

.hc-banner__icon
  width: 50px
  height: 50px
  display: block
  color: #fff
  font-size: 32px
  line-height: 50px
  text-align: center
  cursor: pointer
  border-bottom: 1px solid #313131
  box-shadow: 0 1px 0 0 #525252

.hc-banner__body
  position: absolute
  left: 50px
  top: 0
  height: 100%
  border-left: 1px solid rgba(0,0,0,0.2)
  padding: 20px

i.fa
  line-height: 1
  font-style: normal

.hc-banner
  ul
    list-style: none
    margin: 0