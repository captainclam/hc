@import 'nib'

blue = #089AFB
green = rgb(173, 255, 0)
orange = #FF5C00
red = #FF2900

search-bg = #2270A4
search-border = #0A64A0

content-bg = #313131

item-spacing = 2px

html,
body,
.app,
.collection
  height: 100%

.flex-column
  display: flex
  flex-direction: column

.flex-it
  flex: 1

*
  margin: 0
  padding: 0
  box-sizing: border-box

.flat
  margin-bottom: 0 !important  

body
  font-family: sans-serif
  color: #fff
  font-size: 18px
  background-color: #858585

h1
h2
h3
h4
  margin-bottom: 20px
  font-family: sans-serif

h1
  font-size: 42px

h2
  font-size: 32px

h3
	font-size: 24px

p
  margin-bottom: 20px

.app
  transform: translateZ(0)
  transition: all 0.3s ease
  overflow: hidden
  position: relative
  z-index: 10

.app--login
  transform: translateX(-320px)

.header__link
  display: none
  color: #fff
  height: 100%
  line-height: 50px
  border-left: 1px solid rgba(255,255,255,0.1)
  padding: 0 20px
  text-decoration: none
  font-weight: bold
  font-size: 14px

.bg-image
  background-size: cover
  background-repeat: no-repeat
  background-position: center

.bg-image-content
  position: relative
  z-index: 200

.login-link
  display: block

.button
  display: block
  color: #fff
  cursor: pointer
  border-radius: 4px
  background: transparent
  border: 2px solid orange
  height: 55px
  line-height: 55px
  padding: 0 40px
  text-transform: uppercase
  font-size: 14px
  font-weight: bold
  text-align: center
  text-transform: uppercase
  text-decoration: none
  transition: all 0.25s ease
  opacity: 1
  &:focus
    outline: 0

.button--white
  border-color: #fff

.button--inactive
  cursor: default
  border-color: #777
  opacity: 0.1

.button--blue
  border-color: blue
  background: blue
  color: white
  border-radius: 3px
  &:focus
    outline: 0

.button--filled
  background-color: orange
  color: #fff

.button--small
  height: 36px
  line-height: 36px

.button--large
  height: 80px
  line-height: 80px
  padding: 0 60px
  font-size: 18px

.button--block
  display: block
  width: 100%

.logo
  width: 36px
  height: 33px
  margin-right: 10px
  background-image: url("/img/H.svg")
  -webkit-background-size: cover
  -moz-background-size: cover
  background-size: cover

.dev-menu
  display: none

.dev-menu
  a
    display: block

.lastfm
  width: 800px
  height: 200px
  position: absolute
  background-image: url(/img/last-fm.png)
  background-repeat: no-repeat
  bottom: -200px
  background-position: top
  background-size: cover
  z-index: 200
  margin-left: -400px
  left: 50%
  transition: transform 0.25s ease
  transition-delay: 0s

.lastfm--visible
  transform: translateY(-250px)
  transition-delay: 1s

.form
  display: flex
  flex-direction: column
  margin-bottom: 10px
  position: relative
  width: 100%

.form__wrap
  width: 100%
  max-width: 420px
  margin: 0 auto

.form__error
  opacity: 0
  padding: 10px 0
  text-align: center
  transition: opacity 0.25s ease

.form__input
  height: 55px
  font-family: 'Helvetica Neue', sans-serif
  width: 100%
  background-color: #fff
  border: 0
  padding: 0 20px
  font-size: 16px
  font-weight: bold
  color: #555
  border-radius: 3px
  margin-bottom: 10px
  &:focus
   outline: 0
  
.form__action
  height: 55px
  width: 100%
  cursor: pointer
  background: blue
  border: 0
  font-size: 16px
  color: white
  font-weight: bold
  padding: 0 20px
  border-radius: 3px
  &:focus
    outline: 0

.form__label
  font-weight: 100
  text-align: center
  font-size: 18px
  margin-bottom: 20px

.alert__cancel
  color: #BDBDBD
  font-size: 18px
  margin-top: 20px
  font-weight: 200

.answers
  display: flex
  justify-content: space-between

.answers__btn
  flex-basis: 45%

.header
  overflow: hidden
  padding-right: 10px
  position: absolute
  width: 100%
  z-index: 500
  height: 44px
  background: linear-gradient(lighten(black,20),lighten(black,18))
  border-top: 1px solid #4B4B4B
  top: -50px
  transition: transform 0.25s 0.2s ease

.header__wrap
  display: flex
  align-items: center

.header__question
  color: #fff
  text-align: center
  font-size: 14px
  margin-bottom: 10px

.header__title
  font-size: 22px
  font-weight: bold
  color: #fff
  text-shadow: 0 1px 1px rgba(0,0,0,0.4)

.header__action
  position: absolute
  right: 10px
  top: -44px
  transition: transform 0.4s ease

.finder
  position: relative
  flex: 1
  display: none

.finder__clear
  position: absolute
  right: 20px
  bottom: 8px
  color: red

.finder__input
  width: 100%
  border: 0
  height: 35px
  padding: 0 20px
  font-size: 14px
  background-color: #fff
  border-radius: 4px
  color: #333
  border: none
  &:focus
    outline: 0

.finder__input::-webkit-input-placeholder
   color: #999

.finder__input:-moz-placeholder
   color: #999

.finder__input::-moz-placeholder
   color: #999

.finder__input:-ms-input-placeholder
   color: #999


.form__input::-webkit-input-placeholder
   color: #999
   font-weight: normal

.form__input:-moz-placeholder
   color:  #999
   font-weight: normal

.form__input::-moz-placeholder
   color:  #999
   font-weight: normal

.form__input:-ms-input-placeholder
   color:  #999
   font-weight: normal

.content
  background-color: rgba(0,0,0,0.75)
  position: absolute
  bottom: 0
  right: 0
  left: 0
  top: 0
  overflow: hidden

.content__header
  display: none

.search
  position: absolute
  z-index: 20
  left: 100%
  top: 0
  background-color: #333
  width: 100%
  height: 100%

.search--active
  transform: translateX(-100%)
  transform: translateX(-100%)

.results__list
  overflow: hidden
  margin: 0 auto

.result
  color: #fff
  flex-wrap: wrap
  display: flex
  flex-flow: column
  padding: 10px
  position: relative
  height: 60px
  padding-left: 55px
  justify-content: center
  cursor: pointer

.result__thumb
  position: absolute
  width: 30px
  left: 10px
  top: 15px

.result__title
  font-weight: bold
  width: 100%
  font-size: 14px
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

.result__subtitle
  color: #999
  font-weight: normal
  font-size: 14px

.placeholders
  position: absolute
  bottom: 0
  width: 100%
  left: 0
  top: 0

.placeholder
  background-color: #444
  height: 60px
  height: calc(20% - 1px)
  margin-top: 1px

.module
  top: -100%
  width: 100%
  height: 100%
  position: absolute
  display: flex
  justify-content: center
  align-items: center
  overflow: hidden
  padding: 10px
  opacity: 0
  transform: translateZ(0)
  transition: opacity 0.3s ease-in

.module--active
  opacity: 1
  transform: translateY(100%)

.module--collection
  padding-top: 10%

.module--spaced
  padding-bottom: 43px

.module--landing
  background-color: #111
  &:before
    display: block
    content: ''
    position: absolute
    left: 0
    right: 0
    bottom: 0
    top: 0
    background-image: url("/img/performer.jpg")
    background-repeat: no-repeat
    background-size: cover
    opacity: 0.1
    z-index: 10

.footer
  display: none

@keyframes showTip {
  0% {
    transform: translateY(0)
  }
  100% {
    transform: translateY(100px)
  }
}

@keyframes hideTip {
  0% {
    transform: translateY(100px)
  }
  100% {
    transform: translateY(0)
  }
}


.tip
  width: 100%
  max-width: 600px
  position: absolute
  top: 0
  left: 50%
  margin-left: -300px
  text-align: center
  background-color: rgb(255, 64, 3)
  border-radius: 0 0 3px 3px
  padding: 20px
  padding-right: 40px
  z-index: 300
  color: #FFF
  box-shadow: inset 0 2px 2px rgba(0,0,0,0.2), 0 2px 4px rgba(0, 0, 0, 0.69)
  top: -100px
  transition: transform 0.25s ease

.tip__hide
  position: absolute
  right: 20px
  top: 18px
  font-size: 24px
  color: rgb(151, 54, 0)
  cursor: pointer
  &:hover
    color: #fff

.tip--show
  transform: translateY(100px)
  transition-delay: 1s

.publish
  transition: transform 0.3s ease
  width: 100%
  background: none
  border: 1px solid #fff
  border-radius: 2px
  color: #fff
  padding: 20px
  font-size: 18px
  font-weight: bold
  cursor: pointer
  &:hover
    background-color: #fff
    color: #222

.spinner
  text-align: center
  font-size: 10px
  top: 50%
  margin-top: -25px
  left: 50%
  margin-left: -20px
  position: absolute

.spinner > div
  background-color: orange
  height: 50px
  width: 8px
  display: inline-block
  margin-left: 1px
  
  -webkit-animation: stretchdelay 1.2s infinite ease-in-out
  -moz-animation: stretchdelay 1.2s infinite ease-in-out
  -ms-animation: stretchdelay 1.2s infinite ease-in-out

.spinner .rect2
  -webkit-animation-delay: -1.1s
  -moz-animation-delay: -1.1s
  -ms-animation-delay: -1.1s

.spinner .rect3
  -webkit-animation-delay: -1.0s
  -moz-animation-delay: -1.0s
  -ms-animation-delay: -1.0s

.spinner .rect4
  -webkit-animation-delay: -0.9s
  -moz-animation-delay: -0.9s
  -ms-animation-delay: -0.9s

.spinner .rect5
  -webkit-animation-delay: -0.8s
  -moz-animation-delay: -0.8s
  -ms-animation-delay: -0.8s

.spinner--huge > div
  height: 100px
  width: 10px

.register
  color: #fff
  // margin-top: -25px - WTF WAS THIS FOR?
  transition: transform 0.25s ease
  max-width: 400px
  margin: 0 auto
  background-color: rgb(46, 46, 46)
  border-radius: 5px
  box-shadow: 0 1px 4px rgba(0,0,0,0.4)
  padding: 20px

.register__window
  position: relative

.register--alert
  transform: translateY(50px)

.register__alert
  display: none
  height: 50px
  color: #fff
  text-align: center
  position: absolute
  top: -50px
  width: 100%
  font-size: 18px
  animation: fadeInUp 0.25s ease

.register__alert--error
  background-color: orange

.register__module
  padding: 10px

.register__group
  display: flex
  flex-direction: column-reverse
  margin-bottom: 20px
  position: relative
  &:last-child
    margin-bottom: 0

.register__group--user:before
  content: 'hipcharts.com/u/'
  display: block
  position: absolute
  z-index: 40
  font-size: 16px
  color: #999
  bottom: 10px
  left: 10px

.register__label
  color: #fff
  margin-bottom: 10px
  font-size: 16px
  font-weight: bold
  display: block

.register__input
  position: relative
  z-index: 20
  height: 40px
  border: 0
  border-radius: 3px
  background-color: #fff
  border: 1px solid rgb(46, 46, 46)
  transition: border-color 0.1s ease
  color: #333
  padding: 0 10px
  font-size: 16px
  width: 100%
  
.register__input--user
  padding-left 129px

.register__input:focus
  outline: 0
  border-color: #fff
  + .register__label
    color: #fff

.register__action
  height: 50px
  width: 100%
  border-radius: 2px
  font-size: 18px
  color: #fff
  background: none
  border: 2px solid orange
  margin-top: 10px
  cursor: pointer
  transition: all 0.1s ease
  &:focus
    outline: 0

.register__action--error
  border-color: red

.register__check
  opacity: 0
  position: absolute
  width: 40px
  height: 40px
  background: #E9E9E9
  color: #555
  right: 0
  bottom: 0
  display: flex
  align-items: center
  justify-content: center
  border: 1px solid #444
  border-left: 0
  border-radius: 0 2px 2px 0
  transition: all 0.2s ease
  z-index: 5
  
.register__check--error
  opacity: 1
  transform: translateX(40px)
  &:before
    content: "\f057"
    font-family: 'FontAwesome'

.register__check--error + .register__input
  border-color: #222

.landing
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  position: relative
  z-index: 20

.landing__logo
  width: 150px
  height: 150px
  background-image: url("/img/H.svg")
  background-size: 150px 150px
  margin-bottom: 10px

.landing__title
  font-size: 28px
  font-family: 'Robot', sans-serif
  margin-bottom: 100px

.landing__strap
  text-align: center
  font-family: 'Helvetica Neue', sans-serif
  margin-bottom: 100px
  max-width: 700px
  font-weight: 100
  font-size: 42px
  border-top: 1px solid rgba(255,255,255,0.4)
  border-bottom: 1px solid rgba(255,255,255,0.4)
  padding: 20px 0
  strong
    font-weight: 400

.login
  width: 320px

.module--blocked
  display: block
  overflow-y: auto

@-webkit-keyframes stretchdelay
  0%
  40%
  100%
    -webkit-transform: scaleY(0.4) 
  20%
    -webkit-transform: scaleY(1.0)

@-moz-keyframes stretchdelay
  0%
  40%
  100%
    -moz-transform: scaleY(0.4)
  20%
    -moz-transform: scaleY(1.0)

@-ms-keyframes stretchdelay
  0%
  40%
  100%
    -ms-transform: scaleY(0.4) 
  20%
    -ms-transform: scaleY(1.0)


.app--login
  transform: translateX(-320px)

.app--login + .login
  opacity: 1

.app--finder
