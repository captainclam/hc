@import item
@import success
@import options
@import entry

@media only screen and (min-width: 768px)

  .module--blocked
    display: block
    overflow-y: auto

  .controls
    display: none
    right: 10px
    position: absolute
    top: 5px

  .slides
    width: 100%
    position: relative
    height: 80vh
    overflow: hidden

  .slides__slider
    position: absolute
    width: 100%
    height: 100%
    transition: transform 0.25s ease
    transform: translateZ(0)
  
  .slides__slider--1
    transform: translateX(-100%)

  .slides__slider--2
    transform: translateX(-200%)

  .slides__slider--login
    transform: translateX(100%)

  .slide
    top: 0
    left: 0
    display: flex
    position: absolute
    align-items: center
    justify-content: center
    width: 100%
    height: 100%
    flex-direction: column

  .slide--login
    left: -100%

  .slide--two
    left: 100%

  .slide--three
    left: 200%

  .collection
    right: 10px
    position: absolute
    top: 0
    height: 100%
    display: flex
    border: 0
    counter-reset: chart 2
    align-items: center

  .header .collection
    display: none

  .header .collection--visible
    display: flex

  .collection__item
    width: calc(20% - 5px)
    background-color: #111

  .collection__hd
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 20px
    padding: 0 10px

  .collection__title
    font-size: 26px
    margin-bottom: 0
    flex: 1
    font-family: 'Roboto', sans-serif

  .collection__tray
    background-image: url(/img/collection-bg.png)
    background-repeat: no-repeat
    background-position: center 5px
    width: 100%
    height: 111px

  .form__label
    font-size: 32px
    margin-bottom: 24px

  .footer
    display: flex
    display: none
    justify-content: space-between
    align-items: center
    position: absolute
    bottom: -100px
    left: 0
    right: 0
    height: 100px
    padding: 10px 20px
    z-index: 100
    background: linear-gradient(rgb(43, 43, 43),rgb(31, 31, 31))
    border-top: 1px solid #3A3A3A
    transition: transform 0.25s 0.5s ease
    box-shadow: 0 -5px 10px rgba(0,0,0,0.4)

  .footer__links a
    color: #999
    font-size: 14px
    text-decoration: none
    padding: 0 20px
    &:first-child
      border-right: 1px solid rgba(255,255,255,0.4)

  .logo
    margin-left: 10px
    margin-right: 110px

  .logo:before
    content: 'Hipcharts'
    display: block
    font-family: 'Droid Sans', sans-serif
    font-weight: bold
    color: #fff
    letter-spacing: -1px
    padding-left: 45px
    padding-top: 6px
    font-size: 20px

  .logo:after
    display: block
    content: "\f060"
    font-family: 'FontAwesome'
    color: #fff
    position: absolute
    top: 5px
    left: -26px

  .module--spaced
    padding-top: 10px
    padding-bottom: 40px

  .module--blocked
    display: block
    padding-bottom: 120px

  .sidebar
    height: 100%
    box-shadow: -1px 0 5px
    position: relative
    border-left: 1px solid rgb(54, 54, 54)

  .container
    width: 100%
    max-width: 768px
    margin: 0 auto

  .items__title
    color: #fff
    font-size: 28px
    text-align: center
    margin-bottom: 20px
    padding-top: 10px

  .header
    height: 50px
    overflow: hidden
    top: auto
    bottom: -50px

  // .header__link
  //   right: 10px
  //   position: absolute
  //   top: 19px
    
  .header--visible
    transform: translateY(-50px)

  .header__question
    font-size: 20px
    margin-bottom: 0

  .header__wrap
    position: relative
    height: 100%
    display: flex
    justify-content: flex-start
    align-items: center

  .content
    padding: 0
    overflow: hidden

  .content__header
    position: absolute
    top: 0
    right: 0
    z-index: 50
    padding: 0 20px
    width: 310px
    background-color: #424242
    color: #8D8D8D
    font-size: 14px
    height: 40px
    display: flex
    align-items: center
    font-weight: 100
    transition: all 0.25s ease
    span
      font-weight: bold
      padding-left: 5px
      color: #eee
      width: 180px
      text-overflow: ellipsis
      white-space: no-wrap
      overflow: hidden

  // .content__list
  //   position: absolute
  //   top: 40px
  //   width: 100%
  //   background-color: #222

  .publish
    animation: none
    position: absolute
    max-width: 310px
    right: -310px
    top: 10px
    height: 44px
    padding: 0
    line-height: 44px
  
  .finder
    margin-right: 40px
    transition: all 0.3s ease
    max-width: 260px

  .finder__clear
    cursor: pointer
    position: absolute
    right: 10px
    bottom: 8px
    color: darken(blue,10)
    font-size: 18px
  
  .search
    overflow: hidden
    left: auto
    right: -100%
    width: 100%
    transform: translateZ(0)

  .result:hover
    background-color: #292929

  .search--active
    transform: translateX(0)

  .module__title
    padding-top: 20px
    color: #fff
    text-align: center
    display: flex
    align-items: center
    justify-content: center
    span
      color: #fff
      margin: 0 10px

  .app--publish .header__action
    transform: translateY(53px)

  .app--user
    .finder
      display: none

@media only screen and (min-width: 1024px)

  .container
    max-width: 1024px
    
@media only screen and (min-width: 1200px)

  .container
    max-width: 1245px

  .alert__cancel:hover
      color: #fff