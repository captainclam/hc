  .publish
    animation: none
    position: absolute
    max-width: 310px
    right: -310px
    top: 10px
    height: 44px
    padding: 0
    line-height: 44px
  
  .finder
    margin-left: 120px
    margin-right: 40px
    transition: all 0.3s ease

  .finder__clear
    cursor: pointer
    position: absolute
    right: 10px
    bottom: 11px
    color: darken(blue,10)
    font-size: 18px
  
  .search
    overflow: hidden
    left: auto
    right: -100%
    width: 100%
    transform: translateZ(0)

  .result:hover
    background-color: #292929

  .search--active
    transform: translateX(0)

  .module__title
    padding-top: 20px
    color: #fff
