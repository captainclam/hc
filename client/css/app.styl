@import 'nib'

blue = #089AFB
green = rgb(173, 255, 0)
orange = #FF5C00

search-bg = #2270A4
search-border = #0A64A0

content-bg = #313131

item-spacing = 2px

html,
body,
.app,
.module,
.collection,
.entries
  height: 100%

*
  margin: 0
  padding: 0
  box-sizing: border-box

.flat
  margin-bottom: 0 !important  

body
  font-family: sans-serif
  color: #fff
  font-size: 18px

h1
h2
h3
h4
  margin-bottom: 20px
  font-family: sans-serif

h1
  font-size: 42px

h2
  font-size: 32px

h3
	font-size: 24px

p
  margin-bottom: 20px

.header__link
  display: none
  color: #fff

.login
  display: block

.button
  display: flex
  align-items: center
  justify-content: center
  color: #fff
  cursor: pointer
  border-radius: 4px
  background: transparent
  border: 2px solid orange
  height: 55px
  padding: 0 40px
  text-transform: uppercase
  font-size: 14px
  font-weight: bold
  text-align: center
  text-transform: uppercase
  text-decoration: none
  transition: all 0.25s ease
  opacity: 1

.button--inactive
  cursor: default
  border-color: #777
  opacity: 0.1

.button--blue
  border-color: blue
  background: blue
  color: white
  border-radius: 3px
  &:focus
    outline: 0

.button--filled
  background-color: orange
  color: #fff

.button--large
  height: 80px
  padding: 0 60px
  font-size: 18px

.button--block
  display: block
  width: 100%

.logo
  width: 36px
  height: 33px
  margin-right: 10px
  background-image: url("/img/H.svg")
  -webkit-background-size: cover
  -moz-background-size: cover
  background-size: cover

.dev-menu
  display: none

.dev-menu
  a
    display: block

.lastfm
  width: 800px
  height: 200px
  position: absolute
  background-image: url(/img/last-fm.png)
  background-repeat: no-repeat
  bottom: -200px
  background-position: top
  background-size: cover
  z-index: 200
  margin-left: -400px
  left: 50%
  transition: transform 0.25s 1s ease

.lastfm--visible
  transform: translateY(-200px)

.alert__container
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  height: 100%

.form
  display: flex
  flex-direction: column
  margin-bottom: 10px
  position: relative
  width: 100%

.form__wrap
  width: 100%
  max-width: 420px
  margin: 0 auto

.form__error
  opacity: 0
  padding: 10px 0
  text-align: center
  transition: opacity 0.25s ease

.form__input
  height: 55px
  font-family: 'Helvetica Neue', sans-serif
  width: 100%
  background-color: #fff
  border: 0
  padding: 0 20px
  font-size: 16px
  font-weight: bold
  color: #555
  border-radius: 3px
  margin-bottom: 10px
  &:focus
   outline: 0
  
.form__action
  height: 55px
  width: 100%
  cursor: pointer
  background: blue
  border: 0
  font-size: 16px
  color: white
  font-weight: bold
  padding: 0 20px
  border-radius: 3px
  &:focus
    outline: 0

.form__label
  font-weight: 100
  text-align: center
  font-size: 18px
  margin-bottom: 20px

.alert__cancel
  color: #BDBDBD
  font-size: 18px
  margin-top: 20px
  font-weight: 200

.answers
  display: flex
  justify-content: space-between

.answers__btn
  flex-basis: 45%

.header
  overflow: hidden
  position: absolute
  width: 100%
  top: 0
  z-index: 50

.header__wrap
  display: flex
  align-items: center
  padding: 0 10px

.header__question
  color: #fff
  text-align: center
  font-size: 14px
  margin-bottom: 10px

.header__title
  font-size: 22px
  font-weight: bold
  color: #fff
  text-shadow: 0 1px 1px rgba(0,0,0,0.4)

.header__action
  position: absolute
  right: 10px
  top: -44px
  transition: transform 0.4s ease

.finder
  position: relative
  flex: 1
  display: none

.finder__clear
  position: absolute
  right: 20px
  bottom: 13px
  color: red

.finder__input
  width: 100%
  border: 0
  height: 44px
  padding: 0 20px
  font-size: 14px
  background-color: #fff
  border-radius: 2px
  color: #555
  &:focus
    outline: 0

.finder__input::-webkit-input-placeholder
   color: #999

.finder__input:-moz-placeholder
   color: #999

.finder__input::-moz-placeholder
   color: #999

.finder__input:-ms-input-placeholder
   color: #999


.form__input::-webkit-input-placeholder
   color: #999
   font-weight: normal

.form__input:-moz-placeholder
   color:  #999
   font-weight: normal

.form__input::-moz-placeholder
   color:  #999
   font-weight: normal

.form__input:-ms-input-placeholder
   color:  #999
   font-weight: normal

.content
  background-color: #2c2c2c
  box-shadow: inset 0 2px 2px rgba(0,0,0,0.3)
  position: absolute
  bottom: 0
  width: 100%
  top: 0
  overflow: hidden

.content__header
  display: none

.search
  position: absolute
  z-index: 20
  left: 100%
  top: 0
  background-color: #333
  width: 100%
  height: 100%

.search--active
  transform: translateX(-100%)
  transform: translateX(-100%)

.results__list
  overflow: hidden

.result
  color: #fff
  flex-wrap: wrap
  display: flex
  flex-flow: column
  padding: 10px
  position: relative
  height: 60px
  padding-left: 55px
  justify-content: center
  cursor: pointer

.result__thumb
  position: absolute
  width: 30px
  left: 10px
  top: 15px

.result__title
  font-weight: bold
  width: 100%
  font-size: 14px
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

.result__subtitle
  color: #999
  font-weight: normal
  font-size: 14px

.placeholders
  position: absolute
  bottom: 0
  width: 100%
  left: 0
  top: 0

.placeholder
  background-color: #444
  height: 60px
  height: calc(20% - 1px)
  margin-top: 1px

// .container
//   max-width: 800px
//   margin: 0 auto

.module
  display: none
  height: 100%
  padding: 10px
  overflow: hidden
  counter-reset: tally
  transform: translateZ(0)
  justify-content: center
  align-items: center

.module--active
  display: block

.module--collection
  padding-top: 10%

.module--spaced
  padding-top: 43px

.footer
  display: none

@keyframes showTip {
  0% {
    transform: translateY(0)
  }
  100% {
    transform: translateY(100px)
  }
}

@keyframes hideTip {
  0% {
    transform: translateY(100px)
  }
  100% {
    transform: translateY(0)
  }
}


.tip
  width: 100%
  max-width: 600px
  position: absolute
  top: 0
  left: 50%
  margin-left: -300px
  text-align: center
  background-color: rgb(255, 64, 3)
  border-radius: 0 0 3px 3px
  padding: 20px
  padding-right: 40px
  z-index: 300
  color: #FFF
  box-shadow: inset 0 2px 2px rgba(0,0,0,0.2), 0 2px 4px rgba(0, 0, 0, 0.69)
  top: -100px
  transition: transform 0.25s ease

.tip__hide
  position: absolute
  right: 20px
  top: 18px
  font-size: 24px
  color: rgb(151, 54, 0)
  cursor: pointer
  &:hover
    color: #fff

.tip--show
  transform: translateY(100px)
  transition-delay: 1s

.entry
	flex-wrap: wrap
	display: flex
	padding: 10px
	position: relative
	align-items: center
	background-color: #fff
	color: #555
	&:first-child
	  border-top: 0

.entry__counter
  position: absolute
  top: 10px
  left: 10px
  color: #fff
  font-weight: bold
  text-shadow: 0 1px 1px rgba(0,0,0,0.8)
  line-height: 60px
  text-align: center
  width: 0px
  height: 0px
  border-style: solid
  border-width: 60px 60px 0 0
  border-color: orange transparent transparent transparent

.entry__thumb
  width: 80px
  margin-right: 20px

.entry__title
  font-weight: bold
  width: 200px
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

.entry__subtitle
  font-weight: normal
  font-size: 14px

.publish
  transition: transform 0.3s ease
  width: 100%
  background: none
  border: 1px solid #fff
  border-radius: 2px
  color: #fff
  padding: 20px
  font-size: 18px
  font-weight: bold
  cursor: pointer
  &:hover
    background-color: #fff
    color: #222

.spinner
  display: none
  text-align: center
  font-size: 10px
  position: absolute
  right: 10px
  top: 14px

.spinner > div
  background-color: orange
  height: 20px
  width: 4px
  display: inline-block
  margin-left: 1px
  
  -webkit-animation: stretchdelay 1.2s infinite ease-in-out
  -moz-animation: stretchdelay 1.2s infinite ease-in-out
  -ms-animation: stretchdelay 1.2s infinite ease-in-out

.spinner .rect2
  -webkit-animation-delay: -1.1s
  -moz-animation-delay: -1.1s
  -ms-animation-delay: -1.1s

.spinner .rect3
  -webkit-animation-delay: -1.0s
  -moz-animation-delay: -1.0s
  -ms-animation-delay: -1.0s

.spinner .rect4
  -webkit-animation-delay: -0.9s
  -moz-animation-delay: -0.9s
  -ms-animation-delay: -0.9s

.spinner .rect5
  -webkit-animation-delay: -0.8s
  -moz-animation-delay: -0.8s
  -ms-animation-delay: -0.8s

.spinner--huge > div
  height: 100px
  width: 10px

.register
  color: #fff
  // margin-top: -25px - WTF WAS THIS FOR?
  transition: transform 0.25s ease

.register--alert
  transform: translateY(50px)

.register__alert
  height: 50px
  display: flex
  align-items: center
  padding: 0 10px
  color: #fff
  margin-bottom: 10px
  font-size: 14px
  font-weight: bold

.register__alert--error
  background-color: orange

.register__module
  padding: 10px

.register__group
  display: flex
  flex-direction: column-reverse
  margin-bottom: 20px
  position: relative

.register__group--user:before
  content: 'hipcharts.com/u/'
  display: block
  position: absolute
  font-size: 16px
  color: #999
  bottom: 10px
  left: 10px

.register__label
  color: #fff
  margin-bottom: 10px
  font-size: 16px
  font-weight: bold
  display: block

.register__input
  height: 40px
  border: 0
  border-radius: 0px
  background-color: rgb(73, 73, 73)
  border: 1px solid rgb(46, 46, 46)
  transition: border-color 0.1s ease
  color: #fff
  padding: 0 10px
  font-size: 16px
  width: 100%

.register__input--user
  padding-left 129px

.register__input:focus
  outline: 0
  border-color: #fff
  + .register__label
    color: #fff

.register__action
  height: 50px
  width: 100%
  border-radius: 2px
  font-size: 18px
  color: #fff
  background: none
  border: 2px solid orange
  margin-top: 10px
  cursor: pointer
  transition: all 0.1s ease
  &:focus
    outline: 0

.landing__title
  font-size: 28px
  font-family: 'Robot', sans-serif
  margin-bottom: 100px

.landing__strap
  text-align: center
  font-family: 'Helvetica Neue', sans-serif
  margin-bottom: 100px
  max-width: 700px
  font-weight: 100
  font-size: 42px
  border-top: 1px solid rgba(255,255,255,0.4)
  border-bottom: 1px solid rgba(255,255,255,0.4)
  padding: 20px 0
  strong
    font-weight: 400

@-webkit-keyframes stretchdelay
  0%
  40%
  100%
    -webkit-transform: scaleY(0.4) 
  20%
    -webkit-transform: scaleY(1.0)

@-moz-keyframes stretchdelay
  0%
  40%
  100%
    -moz-transform: scaleY(0.4)
  20%
    -moz-transform: scaleY(1.0)

@-ms-keyframes stretchdelay
  0%
  40%
  100%
    -ms-transform: scaleY(0.4) 
  20%
    -ms-transform: scaleY(1.0)


@import item
@import success

@media only screen and (min-width: 768px)

  .slides
    width: 100%
    position: relative
    height: 80vh
    overflow: hidden

  .slides__slider
    position: absolute
    width: 100%
    height: 100%
    transition: transform 0.25s ease
    transform: translateZ(0)
  
  .slides__slider--1
    transform: translateX(-100%)

  .slides__slider--2
    transform: translateX(-200%)

  .slide
    top: 0
    left: 0
    display: flex
    position: absolute
    align-items: center
    justify-content: center
    width: 100%
    height: 100%
    flex-direction: column

  .slide--two
    left: 100%

  .slide--three
    left: 200%

  .collection
    position: absolute
    bottom: -200px
    background-color: #414141
    padding: 10px
    padding-top: 20px
    height: 200px
    width: 605px
    margin-left: -300px
    left: 50%
    display: flex
    flex-direction: column
    justify-content: space-between
    border: 1px solid #535353
    border-bottom: 0
    transition: transform 0.3s ease

    .chart
      width: 100%
      display: flex
      height: 100%
      margin-left: -10px

    .entry
      padding: 0
      background: none
      width: calc(20% - 10px) !important
      margin-left: 10px
      height: auto !important
      padding: 0 5px
      border-top: 0
      &:before
        display: none

    .entry__details
      display: none

    .entry__title
      display: none

    .entry__subtitle
      display: none

    .entry__thumb
      width: 100%
      margin-right: 0
      box-shadow: 0 2px 1px rgba(0,0,0,0.4)
      cursor: pointer
      &:before
        opacity: 0
        background-color: #000
        position: absolute
        display: flex
        justify-content: center
        align-items: center
        font-size: 38px
        content: ''
        color: #fff
        width: 100%
        height: 100%
        font-family: 'FontAwesome'
        content: "\f057"
        transition: opacity 0.25s ease

    .entry__thumb:hover:before
      opacity: 0.8
  
  .collection--visible
    transform: translateY(-200px)

  .collection__item
    width: calc(20% - 5px)
    background-color: #111

  .collection__hd
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 20px
    padding: 0 10px

  .collection__title
    font-size: 20px
    text-align: center
    margin-bottom: 0

  .collection__tray
    background-image: url(/img/collection-bg.png)
    background-repeat: no-repeat
    background-position: center 5px
    width: 100%
    height: 111px

  .form__label
    font-size: 32px
    margin-bottom: 24px

  .footer
    display: block
    position: absolute
    bottom: 0
    left: 0
    right: 0
    background-color: #222
    padding: 10px
    text-align: center
    color: #fff
    border-top: 1px solid #333

  .footer__links a
    color: #999
    font-size: 14px
    text-decoration: none
    padding: 0 20px
    &:first-child
      border-right: 1px solid rgba(255,255,255,0.4)

  .module
    padding: 20px

  .bg-image
    background-size: cover
    background-image: url("/img/performer.jpg")

  .landing__logo
    width: 150px
    height: 150px
    background-image: url("/img/H.svg")
    background-size: 150px 150px
    margin-bottom: 10px

  .landing__img
    position: absolute
    background: linear-gradient(rgba(0,0,0,0.5),black)
    z-index: 100
    width: 100%
    height: 100%
    top: 0
    left: 0
    opacity: 1

  .bg-image-content
    position: relative
    z-index: 200

  .logo:before
    content: 'Hipcharts'
    display: block
    font-family: 'Droid Sans', sans-serif
    font-weight: bold
    color: #fff
    letter-spacing: -1px
    padding-left: 45px
    padding-top: 6px
    font-size: 20px

  .module--spaced
    padding-top: 73px
    padding-bottom: 40px

  .sidebar
    height: 100%
    box-shadow: -1px 0 5px
    position: relative
    border-left: 1px solid rgb(54, 54, 54)

  .container
    width: 100%
    max-width: 768px
    margin: 0 auto

  .items__title
    color: #fff
    font-size: 28px
    text-align: center
    margin-bottom: 20px
    padding-top: 10px

  .header
    height: 64px
    top: 0
    overflow: hidden

  .header__question
    font-size: 20px
    margin-bottom: 0

  .header__wrap
    position: relative
    padding: 0 30px
    height: 100%
    display: flex
    justify-content: space-between
    align-items: center

  .content
    padding: 0
    overflow: hidden

  .content__header
    position: absolute
    top: 0
    right: 0
    z-index: 50
    padding: 0 20px
    width: 310px
    background-color: #424242
    color: #8D8D8D
    font-size: 14px
    height: 40px
    display: flex
    align-items: center
    font-weight: 100
    transition: all 0.25s ease
    span
      font-weight: bold
      padding-left: 5px
      color: #eee
      width: 180px
