!!! 5
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="apple-mobile-web-app-capable",content="yes")
    meta(name="viewport",content="width=device-width, initial-scale=1.0, maximum-scale=1.0,user-scalable=no")
    != SocketStream
    title Hipcharts
    link(rel="stylesheet",href="font-awesome/css/font-awesome.css")
    link(rel="stylesheet",href="animations.css")
  body
    .app.bg-image
      include header
      .content
        //- .tip Remember to use the search box above to find any album!
        //-   i.fa.fa-times-circle.tip__hide
        .lastfm
        .module.module--active#splash
        .module.module--spaced.module--blocked#collection
          .radial
          ul.chart.entries
          .nav
            a.button.button--white.button--inactive.chart-toggle(href="#prev") Prev
            a.button.chart-toggle(href="#next") Next
        .module.module--spaced.module--blocked#options
          .options
            a(href="#lastfm").option.go
              h2.option__title Top Five
                stong.option__type albums
              h3.option__year 2013
            a(href="#").option.option--disabled
              h2.option__title Top Five
                stong.option__type songs
              h3.option__year 2013
            a(href="#").option.option--disabled
              h2.option__title Top Five
                stong.option__type games
              h3.option__year 2013
            a(href="#").option.option--disabled
              h2.option__title Top Five
                stong.option__type movies
              h3.option__year 2013
            a(href="#").option.option--disabled
              h2.option__title Top Five
                stong.option__type books
              h3.option__year 2013
        .module.module--landing#landing
          .container
            .landing
              .landing__logo
              h1.landing__title Hipcharts 
              h2.landing__strap Create your 
                strong top fives 
                | and contribute to real time social charts!
              a(href="#options").button.button--large.go.show-options Create your first chart
        .module#lastfm
          .container
            .slides
              .slides__slider
                .slide
                  form.form
                    label.form__label Would you like to use 
                      strong last.fm 
                      | for suggestions?
                    .form__wrap.answers
                      a.button.button--filled.next-slide.answers__btn(id="yes") Yes
                      a.button.get-default-suggestions.answers__btn(href="#suggestions").go No
                .slide.slide--two
                  form.form#last-fm-form
                    label.form__label.flat What is your 
                      strong last.fm 
                      | username?
                    .form__wrap
                      .form__error
                        #error-message This is an error message
                      input(type="text",id="last-fm-username",autocomplete="off",class="form__input",placeholder="Enter your username")
                      button(type="submit").button.button--block.button--filled Show your most played
                  a.get-default-suggestions(href="#suggestions").alert__cancel.go I don't use last.fm, continue with default suggestions.
        .module#register
          .container
            include register
        .module.module--spaced.module--blocked.suggestions#suggestions
          #suggestions-list.results__list
          //- .spinner
            .rect1
            .rect2
            .rect3
            .rect4
            .rect5
        .footer
          .collection__title What were your top five albums of 2013?
          .collection
            .chart
          a.button.button--small.button--inactive(id="publish", href="#register") Publish
    include login

